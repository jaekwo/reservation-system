<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nclab.hotel.dao.HotelDAO">
	<select id="getTest" resultType="com.nclab.hotel.vo.HotelVO">
		select * from hotel
	</select>
	
	<select id="findHotelByAddressOrName" resultType="com.nclab.hotel.vo.HotelVO">
		select * from hotel where address like '%' || #{keyword} || '%' or name like '%' || #{keyword} || '%'
	</select>
</mapper>
